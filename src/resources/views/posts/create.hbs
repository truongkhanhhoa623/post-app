<section class="create-page">
        <div class="container mt-5">
            <h3> Tạo bài viết</h3>
            <form class="mt-4" action= "/posts/store" method="POST">
                <div class="form-group">
                    <label for="title">Tiêu đề</label>
                    <input type="text" class="form-control" id="title" name="title"  placeholder="Tiêu đề bài biết">
                </div>
                <div class="form-group">
                    <label for="image">Mô tả bài viết</label>
                    <input type="text" class="form-control" id="image" name = "image" placeholder="Mô tả bài viết ">
                </div>
                <div class="form-group">
                     <label class="form-check-label" for="content">Nội dung bài viết</label>
                    <textarea class="form-control" type="text" class="form-check-input" id="content" name = "content"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Tạo bài viết</button>
            </form>
        </div>
</section>